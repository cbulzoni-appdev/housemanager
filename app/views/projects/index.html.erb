<div>
  <div>
    <h1>
      List of all projects
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new project
    </h2>

    <form action="/insert_project" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <div>
        <label for="date_started_box">
          Date started
        </label>

        <input type="date" id="date_started_box" name="query_date_started">
      </div>

      <div>
        <label for="date_completed_box">
          Date completed
        </label>

        <input type="date" id="date_completed_box" name="query_date_completed">
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <textarea id="notes_box" name="query_notes" rows="3"></textarea>
      </div>

      <div>
        <label for="house_id_box">
          House
        </label>

        <input type="text" id="house_id_box" name="query_house_id">
      </div>

      <button>
        Create project
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Status
        </th>

        <th>
          Date started
        </th>

        <th>
          Date completed
        </th>

        <th>
          Notes
        </th>

        <th>
          House
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_projects.each do |a_project| %>
      <tr>
        <td>
          <%= a_project.id %>
        </td>

        <td>
          <%= a_project.description %>
        </td>

        <td>
          <%= a_project.status %>
        </td>

        <td>
          <%= a_project.date_started %>
        </td>

        <td>
          <%= a_project.date_completed %>
        </td>

        <td>
          <%= a_project.notes %>
        </td>

        <td>
          <%= a_project.house_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_project.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_project.updated_at) %> ago
        </td>

        <td>
          <a href="/projects/<%= a_project.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
